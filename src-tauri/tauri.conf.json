{
  "build": {
    "beforeDevCommand": "npm run start -- --port 1420",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist/familytree",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "familytree",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": true,
        "open": true,
        "save": true
      },
      "globalShortcut": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "ru.nutsalhan87.familytree",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "category": "Utility",
      "shortDescription": "Программа для построения семейного древа",
      "macOS": {
        "license": "../LICENSE"
      },
      "windows": {
        "digestAlgorithm": "SHA-256",
        "allowDowngrades": true,
        "webviewInstallMode": {
          "silent": true,
          "type": "embedBootstrapper"
        },
        "wix": {
          "language": [ "ru-RU", "en-US"],
          "license": "../License.rtf"
        },
        "nsis": {
          "license": "../LICENSE",
          "installerIcon": "icons/icon.ico",
          "displayLanguageSelector": true,
          "installMode": "both"
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "width": 1200,
        "height": 900,
        "title": "Familytree"
      }
    ]
  }
}
